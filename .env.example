# Scientific Agent System - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# GEMINI API KEYS (Multiple keys for rate limit handling)
# =============================================================================

# Primary API key (REQUIRED)
# Get one from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_primary_api_key_here

# Additional API keys for rotation (OPTIONAL but RECOMMENDED)
# Add more keys to avoid rate limiting issues
# The system will automatically rotate between available keys
GEMINI_API_KEY_1=your_second_api_key
GEMINI_API_KEY_2=your_third_api_key
GEMINI_API_KEY_3=your_fourth_api_key

# Alternative: Comma-separated list of keys
# GEMINI_API_KEYS=key1,key2,key3,key4

# =============================================================================
# GITHUB CONFIGURATION
# =============================================================================

# Optional: GitHub Personal Access Token
# Needed for private repositories or higher API rate limits
# Create one at: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

HOST=127.0.0.1
PORT=8000

# =============================================================================
# EXECUTION OPTIONS
# =============================================================================

# Use Docker for sandboxed code execution (recommended)
USE_DOCKER=true

# Output directory for reports
OUTPUT_DIR=./outputs

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# RATE LIMITING
# =============================================================================

# Requests per minute per API key (Gemini free tier: 15)
REQUESTS_PER_MINUTE=15

# Cooldown time in seconds when a key is exhausted
KEY_COOLDOWN_SECONDS=60
